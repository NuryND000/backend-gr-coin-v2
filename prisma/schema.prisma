generator client {
  provider = "prisma-client-js"
}

const DATABASE_URL="mysql://root:1234@localhost:3306/gr_coins";

datasource db {
  provider = "mysql"
  url      = DATABASE_URL
}

model User {
  id       Int    @id @default(autoincrement())
  username String 
  alamat    String
  wilayah String
  tlp      String @unique
  ewallet      String @unique
  password String
  role     String
  CoinExchange CoinExchange[]
  CoinTransaction CoinTransaction[]
  Complaint Complaint[]
}

model Complaint {
  id      Int     @id @default(autoincrement())
  userId  Int
  complaint  String
  status String
  date  DateTime
  user    User    @relation(fields: [userId], references: [id])
}

model CoinExchange {
  id      Int     @id @default(autoincrement())
  userId  Int
  amount  Float
  date  DateTime
  user    User    @relation(fields: [userId], references: [id])
}

model CoinTransaction {
  id      Int     @id @default(autoincrement())
  userId  Int
  amount  Float
  status     String
  date  DateTime
  user    User    @relation(fields: [userId], references: [id])
}